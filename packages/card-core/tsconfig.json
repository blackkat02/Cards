{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
    "moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
  "exclude": ["./__tests__", "./__mocks__", "./dist", "node_modules"]
}
